    <script>
        
            // Initialize OpenStreetMap
            var map = L.map('contacts-map').setView([20.5937, 78.9629], 4);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);
    
            // Add markers from contact data
            document.querySelectorAll('.contact').forEach(contact => {
                var lat = contact.getAttribute('data-lat');
                var lng = contact.getAttribute('data-lng');
                L.marker([lat, lng]).addTo(map)
                    .bindPopup(contact.querySelector('p').textContent)
                    .openPopup();
            });
      
