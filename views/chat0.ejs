<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rescue Agency Chat System</title>
    <link rel="stylesheet" href="style-chat.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
</head>
<body>
<!-- background image section  -->
<div class="background-image"></div>
<!-- Header -->
<header>
  <img src="/images/final 1 with white edges.png" alt="">
    <h4></h4>
</header>

    <div class="main-container">
        <!-- Chat List / Contacts Section -->
        <div class="contacts-section">
            <div id="contacts-map"></div>
            <div class="contacts-list">
                <h3>Contacts</h3>
                <div class="contact" data-lat="28.7041" data-lng="77.1025">
                    <img src="https://via.placeholder.com/50" alt="Profile">
                    <p>John Doe</p>
                </div>
                <div class="contact" data-lat="19.0760" data-lng="72.8777">
                    <img src="https://via.placeholder.com/50" alt="Profile">
                    <p>Jane Smith</p>
                </div>
                <div class="contact" data-lat="13.0827" data-lng="80.2707">
                    <img src="https://via.placeholder.com/50" alt="Profile">
                    <p>Mike Johnson</p>
                </div>
            </div>
        </div>

        <!-- Chat Box Section -->
        <div class="chat-box">
            <div class="chat-header">
                <h3>Chat with John Doe</h3>
            </div>
            <div class="chat-messages">
                <p class="sent">Hello, how are you?</p>
                <p class="received">Iâ€™m good, thanks! How about you?</p>
            </div>
            <div class="chat-input">
                <input type="text" placeholder="Type a message..." />
                <button>Send</button>
            </div>
        </div>
    </div>

    <script>
        // Initialize OpenStreetMap
        var map = L.map('contacts-map').setView([20.5937, 78.9629], 4);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        // Add markers from contact data
        document.querySelectorAll('.contact').forEach(contact => {
            var lat = contact.getAttribute('data-lat');
            var lng = contact.getAttribute('data-lng');
            L.marker([lat, lng]).addTo(map)
                .bindPopup(contact.querySelector('p').textContent)
                .openPopup();
        });
    </script>
</body>
</html>
