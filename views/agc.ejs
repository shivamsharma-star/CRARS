    /* FLOWTING BTN */

    /* Ensure the button is positioned inside the right container and fixed within it */
    .floating-btn-container {
  position: fixed; /* Fixed to the screen */
  bottom: 20px; /* Distance from the bottom of the viewport */
  right: 20px; /* Distance from the right of the viewport */
  z-index: 1000; /* Make sure it stays above other elements */
}

.floating-btn-container button {
  padding: 15px 25px;
  background-color: #ff3333; /* Button color */
  color: white;
  border: none;
  border-radius: 50%;
  font-size: 24px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
  cursor: pointer;
  transition: transform 0.2s, box-shadow 0.2s;
}

.floating-btn-container button:hover {
  background-color: #cc2929;
  transform: scale(1.1); /* Hover effect */
}

.floating-btn-container button:active {
  transform: scale(0.95); /* Press effect */
}

/* Ensure the .menu-grid container has a relative position for the button to align correctly */
.menu-grid {
  position: relative; /* This ensures the button is positioned relative to this container */
}

/* FLOWTING BTN END */

    .main-page button {
        padding: 10px 20px;
        font-size: 18px;
        cursor: pointer;
        border-radius: 200px;
    }

    /* Modal Styles */
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        align-items: center;
        justify-content: center;
        z-index: 1000;
    }

    .modal-content {
        position: relative;
        width: 90%;
        max-width: 400px;
        background: rgb(27, 146, 124);
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-header button {
        background: transparent;
        border: none;
        font-size: 18px;
        cursor: pointer;
    }

    .modal-body {
        margin-top: 10px;
    }

    .modal-body input {
        width: calc(100% - 20px);
        margin-bottom: 10px;
        padding: 8px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .modal-footer {
        text-align: right;
    }

    .modal-footer button {
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
    }
    


