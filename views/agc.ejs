            })
            .then(response => {
                if (response.ok) {
                    alert("Agency deleted successfully!");
                    location.reload(); // Reload the page to refresh the list
                } else {
                    alert("Failed to delete the agency.");
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert("An error occurred while deleting the agency.");
            });
        }
    }
